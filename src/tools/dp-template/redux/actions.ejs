export type Action = { type: string, payload?: number | string };

// Underscores vs. hyphens
export const BUTTON_CLICK: string = "<%=UNDERSCORE_UPPERCASE_NAME%>_BUTTON_CLICK";
export const OPEN_MODAL_CLICK: string = "<%=UNDERSCORE_UPPERCASE_NAME%>_OPEN_MODAL_CLICK";
export const CLOSE_MODAL_CLICK: string = "<%=UNDERSCORE_UPPERCASE_NAME%>_CLOSE_MODAL_CLICK";
export const REFRESH_DATA_CLICK: string = "<%=UNDERSCORE_UPPERCASE_NAME%>_REFRESH_CLICK";

export const GET_COUNT = "GET_<%=UNDERSCORE_UPPERCASE_NAME%>_COUNT";
export const RECEIVED_COUNT = "RECEIVED_<%=UNDERSCORE_UPPERCASE_NAME%>_COUNT";;

export const refreshData = (): Action => ({ type: REFRESH_DATA_CLICK });
export const closeModal = (): Action => ({ type: CLOSE_MODAL_CLICK });
export const openModal = (): Action => ({ type: OPEN_MODAL_CLICK });
export const buttonClick = (value: number | string): Action => ({
  type: BUTTON_CLICK,
  payload: value
});
